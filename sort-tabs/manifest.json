{
  "manifest_version": 2,

  "name": "sort-tabs",
  "description": "Simple Chrome extension to sort the tabs in a window",
  "version": "0.1",
  "icons": {
    "16":  "icon16.jpg",
    "48":  "icon48.jpg",
    "128": "icon128.jpg"
  },

  "browser_action": {
    "default_icon": "icon48.jpg",
    "default_popup": "popup.html"
  },

  "permissions": [
    "tabs"
  ]
}
